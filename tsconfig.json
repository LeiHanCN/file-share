{
  "compilerOptions": {
    /* Basic Options */
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "pretty": false,
    "resolveJsonModule": true,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./build",
    "strict": true,
    "noImplicitAny": false,
    "alwaysStrict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    /* Experimental Options */
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./*.js",
    "./*.ts",
    "./src/**/*.js",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}
